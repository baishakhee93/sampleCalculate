<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/appColor"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/baseline_arrow_back_ios_24"
            android:drawablePadding="10dp"
            android:gravity="center|start"
            android:paddingStart="20dp"
            android:text=" Calculator"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/header"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ractagle_shap"
        android:gravity="end|center"
        android:paddingEnd="10dp"
        android:text="0"
        android:textSize="24sp" />
    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultTextView">
        <!-- Row 1 -->

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content"
            android:id="@+id/btnClear"
            android:textColor="@color/white"
            android:layout_margin="4dp"
            android:backgroundTint="@color/appColor"
            android:text="C" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/appColor"
            android:id="@+id/btnPower"
            android:textColor="@color/white"
            android:layout_margin="4dp"
            android:text="x^y"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/appColor"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/btnEqual"
            android:layout_margin="4dp"
            android:text="="
            android:layout_columnSpan="1" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@id/row1">
        <!-- Row 2 -->

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/appColor"
            android:layout_height="wrap_content"
            android:id="@+id/btnPercentage"
            android:layout_margin="4dp"
            android:text="%" />


        <Button
            android:layout_width="0dp"
            android:backgroundTint="@color/appColor"
            android:layout_weight="1"            android:textColor="@color/white"

            android:layout_height="wrap_content"
            android:id="@+id/btnDivide"
            android:layout_margin="4dp"
            android:text="/" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"            android:textColor="@color/white"
            android:backgroundTint="@color/appColor"
            android:layout_height="wrap_content"
            android:id="@+id/btnMultiply"
            android:layout_margin="4dp"
            android:text="*" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@id/row2">


        <!-- Row 3 -->


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/appColor"
            android:layout_height="wrap_content"
            android:id="@+id/btn7"
            android:layout_margin="4dp"
            android:text="7" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/appColor"
            android:layout_height="wrap_content"
            android:id="@+id/btn8"
            android:layout_margin="4dp"
            android:text="8" />


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/appColor"
            android:layout_height="wrap_content"
            android:id="@+id/btn9"
            android:layout_margin="4dp"
            android:text="9" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@id/row3">


        <!-- Row 4 -->

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/appColor"
            android:layout_height="wrap_content"
            android:id="@+id/btn4"
            android:layout_margin="4dp"
            android:text="4" />


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/appColor"
            android:layout_height="wrap_content"
            android:id="@+id/btn5"
            android:layout_margin="4dp"
            android:text="5" />


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/appColor"
            android:layout_height="wrap_content"
            android:id="@+id/btn6"
            android:layout_margin="4dp"
            android:text="6" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/row5"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@id/row4">



        <!-- Row 5 -->

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/appColor"
            android:layout_height="wrap_content"
            android:id="@+id/btn1"
            android:layout_margin="4dp"
            android:text="1" />


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/appColor"
            android:layout_height="wrap_content"
            android:id="@+id/btn2"
            android:layout_margin="4dp"
            android:text="2" />


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/appColor"
            android:layout_height="wrap_content"
            android:id="@+id/btn3"
            android:layout_margin="4dp"
            android:text="3" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/row6"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@id/row5">


        <!-- Row 6 -->

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/appColor"
            android:layout_height="wrap_content"
            android:id="@+id/btnRoot"
            android:layout_margin="4dp"
            android:text="√" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/appColor"
            android:layout_height="wrap_content"
            android:id="@+id/btn0"
            android:layout_margin="4dp"
            android:text="0"
            android:layout_columnSpan="1" />


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/appColor"
            android:layout_height="wrap_content"
            android:id="@+id/btnDot"
            android:layout_margin="4dp"
            android:text="." />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/row7"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@id/row6">


        <!-- Row 7 -->


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/appColor"
            android:layout_height="wrap_content"
            android:id="@+id/btnAdd"
            android:layout_margin="4dp"
            android:text="+" />


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/appColor"
            android:layout_height="wrap_content"
            android:id="@+id/btnSubtract"
            android:layout_margin="4dp"
            android:text="-" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/appColor"
            android:layout_height="wrap_content"
            android:id="@+id/btnBack"
            android:layout_margin="4dp"
            android:text="⌫" />


    </LinearLayout>

    <!-- Button Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultTextView"
        android:columnCount="3"
        android:rowCount="7"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">













    </GridLayout>
</RelativeLayout>
